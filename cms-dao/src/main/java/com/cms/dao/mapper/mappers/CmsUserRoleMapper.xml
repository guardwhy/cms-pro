<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cms.dao.mapper.CmsUserRoleMapper">
    <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>

    <!--数据库查询语句-->
    <sql id="baseColumn">
        id,
        site_name,
        keywords,
        description
    </sql>

    <resultMap id="baseResultMap" type="com.cms.dao.entity.CmsSiteEntity">
        <id property="id" column="id"/>
        <result property="siteName" column="siteName"/>
        <result property="keywords" column="keywords"/>
        <result property="description" column="description"/>
    </resultMap>

    <!--查询角色-->
    <select id="selectById" resultMap="baseResultMap">
        select <include refid="baseColumn"/> from cms_site where id = #{id}
    </select>

    <!--保存角色-->
    <insert id="save">
        insert into cms_user_role (role_id,user_id) values (#{roleId},#{userId})
    </insert>
</mapper>