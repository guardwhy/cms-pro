<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cms.dao.mapper.CmsRoleMapper">

    <!--base-sql-->
    <sql id="baseField">
        id,
        name,
        is_all,
        status,
        priority
    </sql>

    <!--key-sql-->
    <sql id="key">
        <if test="name!=null and name!=''">
            name,
        </if>
        <if test="priority!=null">
            priority,
        </if>
        <if test="all!=null">
            is_all,
        </if>
        <if test="status!=null">
            status,
        </if>
        create_time
    </sql>

    <!--value-sql-->
    <sql id="value">
        <if test="name!=null and name!=''">
            #{name},
        </if>
        <if test="priority!=null">
            #{priority},
        </if>
        <if test="all!=null">
            #{all},
        </if>
        <if test="status!=null">
            #{status},
        </if>
        #{createTime}
    </sql>

    <!--更新-update-->
    <sql id="updateField">
        update_time = #{updateTime},
        <if test="name!=null and name!=''">
            name=#{name},
        </if>
        <if test="priority!=null">
            priority = #{priority},
        </if>
        <if test="all!=null">
            is_all = #{all},
        </if>
        <if test="status!=null">
            status= #{status},
        </if>
    </sql>

    <resultMap id="baseResultMap" type="com.cms.dao.entity.CmsRoleEntity">
        <id property="id" column="id"/>
        <result property="priority" column="priority"/>
        <result property="all" column="is_all"/>
        <result property="status" column="status"/>
        <result property="name" column="name"/>
    </resultMap>

    <!--根据id添加元素-->
    <insert id="save">
        <selectKey order="AFTER" keyProperty="id" resultType="java.lang.Integer">
            select last_insert_id()
        </selectKey>
        insert into cms_role (<include refid="key"/>) values (<include refid="value"/>)
    </insert>

    <!--根据id删除元素-->
    <delete id="deleteById">
        delete from cms_permission where id = #{id}
    </delete>

    <!--根据id修改元素-->
    <update id="update">
        update cms_role
        <trim prefix="set" suffixOverrides=",">
            <include refid="updateField"/>
        </trim>
        where id = #{id}
    </update>

    <!--分页查询-->
    <select id="selectBySearchProvider" parameterType="SearchProvider" resultMap="baseResultMap">
        select
        <include refid="baseField"/>
        from cms_role
        <where>
            <if test="criteria.name!=null and criteria.name!=''">
                name like concat ('%',#{criteria.name},'%')
            </if>
        </where>
        order by priority asc,create_time desc
    </select>

    <!--根据角色id查询-->
    <select id="selectById" resultMap="baseResultMap">
        select
        <include refid="baseField"/>
        from cms_role where id = #{id}
    </select>
</mapper>