<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cms.dao.mapper.CmsRoleMapper">
    <!--base-sql-->
    <sql id="baseField">
        id,
        name,
        url,
        parent_id,
        is_menu,
        action,
        icon,
        priority
    </sql>
    <!--key-sql-->
    <sql id="key">
        <if test="name!=null and name!=''">
            name,
        </if>
        <if test="priority!=null">
            priority,
        </if>
        <if test="all!=null">
            is_all,
        </if>
        <if test="status!=null">
            status,
        </if>
        create_time
    </sql>

    <!--value-sql-->
    <sql id="value">
        <if test="name!=null and name!=''">
            #{name},
        </if>
        <if test="priority!=null">
            #{priority},
        </if>
        <if test="all!=null">
            #{all},
        </if>
        <if test="status!=null">
            #{status},
        </if>
        #{createTime}
    </sql>

    <!--更新-update-->
    <sql id="updateField">
        update_time = #{updateTime},
        <if test="parentId!=null">
            parent_id = #{parentId},
        </if>
        <if test="menu!=null">
            is_menu = #{menu},
        </if>
        <if test="icon!=null and icon!=''">
            icon = #{icon},
        </if>
        <if test="url!=null and url!=''">
            url = #{url},
        </if>
        <if test="name!=null and name!=''">
            name = #{name},
        </if>
        <if test="action!=null and action!=''">
            action = #{action},
        </if>
        <if test="priority!=null">
            priority = #{priority},
        </if>
    </sql>

    <resultMap id="baseResultMap" type="com.cms.dao.entity.CmsPermissionEntity">
        <id property="id" column="id"/>
        <result property="priority" column="priority"/>
        <result property="url" column="url"/>
        <result property="action" column="action"/>
        <result property="parentId" column="parent_id"/>
        <result property="name" column="name"/>
        <result property="menu" column="is_menu"/>
    </resultMap>

    <!--根据id添加元素-->
    <insert id="save">
        <selectKey order="AFTER" keyProperty="id" resultType="java.lang.Integer">
            select last_insert_id()
        </selectKey>
        insert into cms_role (<include refid="key"/>) values (<include refid="value"/>)
    </insert>

    <!--根据id删除元素-->
    <delete id="deleteById">
        delete from cms_permission where id = #{id}
    </delete>

    <!--根据id修改元素-->
    <update id="update">
        update cms_permission
        <trim prefix="set" suffixOverrides=",">
            <include refid="updateField"/>
        </trim>
        where id = #{id}
    </update>

    <select id="selectAll" resultMap="baseResultMap">
        select
        <include refid="baseField"/>
        from cms_permission order by parent_id asc
    </select>

    <select id="selectById" resultMap="baseResultMap">
        select
        <include refid="baseField"/>
        from cms_permission where id = #{id}
    </select>

</mapper>