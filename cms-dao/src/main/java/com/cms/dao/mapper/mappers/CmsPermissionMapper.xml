<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
实体类的映射文件: namespace 指定接口的类全名
-->
<mapper namespace="com.cms.dao.mapper.CmsPermissionMapper">
    <!--SQL-->
    <sql id="key">
        <if test="parentId!=null">
            parent_id,
        </if>
        <if test="menu!=null">
            is_menu,
        </if>
        <if test="icon!=null and icon!=''">
            icon,
        </if>
        <if test="url!=null and url!=''">
            url,
        </if>
        <if test="action!=null and action!=''">
            action,
        </if>
        priority,
        name,
        create_time
    </sql>

    <sql id="value">
        <if test="parentId!=null">
            #{parentId},
        </if>
        <if test="menu!=null">
            #{menu},
        </if>
        <if test="icon!=null and icon!=''">
            #{icon},
        </if>
        <if test="url!=null and url!=''">
            #{url},
        </if>
        <if test="action!=null and action!=''">
            #{action},
        </if>
        #{priority},
        #{name},
        #{createTime}
    </sql>

    <!--查询所有权限信息-->
    <sql id="baseField">
        id,
        name,
        url,
        parent_id,
        action,
        priority
    </sql>
    
    <resultMap id="baseResultMap" type="com.cms.dao.entity.CmsPermissionEntity">
        <id property="id" column="id"/>
        <result property="priority" column="priority"/>
        <result property="url" column="url"/>
        <result property="action" column="action"/>
        <result property="parentId" column="parent_id"/>
        <result property="name" column="name"/>
    </resultMap>

    <!--添加权限验证-->
    <insert id="save">
        insert into cms_permission (<include refid="key"/>) values (<include refid="value"/>)
    </insert>

    <!--查询所有的权限信息-->
    <select id="selectAll" resultMap="baseResultMap">
        select <include refid="baseField"/> from cms_permission
    </select>
</mapper>