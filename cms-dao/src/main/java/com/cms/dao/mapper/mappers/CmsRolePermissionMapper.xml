<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
实体类的映射文件: namespace 指定接口的类全名
-->
<mapper namespace="com.cms.dao.mapper.CmsRolePermissionMapper">
    <sql id="baseField">
        id,
        name,
        url,
        parent_id,
        is_menu,
        action,
        icon,
        priority
    </sql>

    <sql id="key">
        role_id,
        permission_id
    </sql>

    <sql id="updateField">
        update_time = #{updateTime},
        <if test="parentId!=null">
            parent_id = #{parentId},
        </if>
        <if test="menu!=null">
            is_menu = #{menu},
        </if>
        <if test="icon!=null and icon!=''">
            icon = #{icon},
        </if>
        <if test="url!=null and url!=''">
            url = #{url},
        </if>
        <if test="name!=null and name!=''">
            name = #{name},
        </if>
        <if test="action!=null and action!=''">
            action = #{action},
        </if>
        <if test="priority!=null">
            priority = #{priority},
        </if>
    </sql>

    <resultMap id="baseResultMap" type="com.cms.dao.entity.CmsPermissionEntity">
        <id property="id" column="id"/>
        <result property="priority" column="priority"/>
        <result property="url" column="url"/>
        <result property="action" column="action"/>
        <result property="parentId" column="parent_id"/>
        <result property="name" column="name"/>
        <result property="menu" column="is_menu"/>
    </resultMap>

    <insert id="batchInsert">
        insert into cms_role_permission (<include refid="key"/>) values
        <foreach collection="permissionList" item="item" separator=",">
            (#{roleId},#{item})
        </foreach>
    </insert>

    <delete id="deleteById">
        delete from cms_permission where id = #{id}
    </delete>

    <update id="update">
        update cms_permission
        <trim prefix="set" suffixOverrides=",">
            <include refid="updateField"/>
        </trim>
        where id = #{id}
    </update>

    <select id="selectAll" resultMap="baseResultMap">
        select
        <include refid="baseField"/>
        from cms_permission order by parent_id asc
    </select>

    <select id="selectById" resultMap="baseResultMap">
        select
        <include refid="baseField"/>
        from cms_permission where id = #{id}
    </select>
</mapper>